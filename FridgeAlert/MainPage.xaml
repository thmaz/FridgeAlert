<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FridgeAlert.MainPage"
             NavigationPage.HasNavigationBar="False">
    <StackLayout>

        <VerticalStackLayout
            Spacing="30"
            Padding="30,0"
            VerticalOptions="Center">

            <Frame
                BackgroundColor="#2196D3"
                Padding="24"
                CornerRadius="20">
                <Label 
                    Text="Fridge Alert"
                    TextColor="White"
                    FontSize="32"/>
            </Frame>
            <Label
                Text="Welcome to Fridge Alert! Proceed by clicking the button below :)"/>
            <Button
                x:Name="LogInButton"
                Text="Log in"
                Margin="0,40,0,0"
                TextColor="White"
                HorizontalOptions="Center"
                BackgroundColor="#2196D3"
                Clicked="LoginButtonClicked"/>
        </VerticalStackLayout>
    </StackLayout>
</ContentPage>
