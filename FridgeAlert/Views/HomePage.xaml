<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="FridgeAlert.Views.HomePage"
            xmlns:views="clr-namespace:FridgeAlert.Views">

    <StackLayout>
            <VerticalStackLayout>
                <Label 
                    Text="Navigate using flyout"
                    FontSize="14"
                    BackgroundColor="White"
                    HorizontalOptions="Center"/>
            <Border
                Stroke="Black"
                StrokeThickness="2"
                StrokeShape="RoundRectangle, 40, 40, 0, 40"
                Padding="20"
                Margin="75"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                BackgroundColor="#fcff33">
                
                <Image 
                    Source="homepagelogo_3.png"
                    HeightRequest="100"
                    WidthRequest="100"
                    Aspect="AspectFit"/>
            
            </Border>

            <Button
                x:Name="GenerateBeerButton"
                Text="Click me for a beer suggestion"
                Clicked="GenerateBeer_Clicked"/>

        </VerticalStackLayout>
    </StackLayout>
</ContentPage>