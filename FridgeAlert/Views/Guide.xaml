<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FridgeAlert.Views.Guide"
             Title="Guide">
    <Border
        Margin="20"
        Padding="20"
        Stroke="Black"
        StrokeThickness="2"
        StrokeShape="RoundRectangle, 40, 40, 40, 40">
        <VerticalStackLayout
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Padding="20">
            <Label Text="This page will contain a guide for users on how to use the app"/>
            <Label x:Name="LocationLabel" Text="Current Location: Not available" FontSize="16" Margin="0,20,0,0"/>
            <Button Text="Get Current Location" Clicked="GetCurrentLocation_Clicked"/>
        </VerticalStackLayout>
    </Border>
</ContentPage>
